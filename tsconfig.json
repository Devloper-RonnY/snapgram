{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "module": "es2020",

    //shadcn url 
    "baseUrl": ".",
    "paths": {
